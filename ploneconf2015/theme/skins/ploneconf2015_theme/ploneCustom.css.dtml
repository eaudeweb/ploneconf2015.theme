form label {
  min-width: 200px;
}

form input[name="userid"],
form input[type="text"],
form input[type="password"],
form textarea,
form select {
  color: #333333;
}

#plone-content .table-striped > tbody > tr:nth-of-type(odd) {
  background-color: #f76a52;
}

.ploneconf-tickets {
  position: relative;
}

.ploneconf-tickets .cart-summary {
  min-width: 150px;
  position: relative;
  top: -5.5em;
  right: 1em;
}

.ploneconf-tickets #quantity {
  display: none;
}

span.required {
  color: red;
}

span.required:after {
  content: "â– ";
  color: #f76a52;
  padding-left: 0.2em;
}

